    <div data-ng-controller="AppCtrl">
        <div data-ng-include=" 'views/menu.html' "></div>

      <div class="view-container container">
        <div class="indexable">

          <div class="row">
            <div class="col-md-5">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h2 class="panel-title"><%=post.title%></h2>
                </div>
                <div class="panel-body">

                  <p>
                    <%=post.description%>
                  </p>

                  <div class="btn-group">
                    <button class="btn btn-default"><i class="fa fa-thumbs-up"></i></button>
                    <button class="btn btn-default"><i class="fa fa-thumbs-down"></i></button>
                    <a class="btn btn-primary" href="/user/petronilo">
                      <i class="fa fa-user"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-7">
              <% if(typeof post.image!='undefined') %>
                <img src="<%=post.image%>" alt="<%=post.title%>" style="max-width:100%" />
              <%%>
            </div>
          </div>

        </div>
      </div>
    </div>

</div><!--/main-->


